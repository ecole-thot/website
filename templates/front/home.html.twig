{% extends 'base.html.twig' %}
{% set menu = "home" %}
{% block title %}{{ parent() }} {{ "home.title"|trans }}{% endblock %}

{% block body %}

<section class="ui padded grid stackable intro"{% if settings.inscriptions_open %} style="padding-bottom: 40px"{% endif %}>
    <div class="main-color ten wide column">
        <h1 class="title">{{ "welcome"|trans }}</h1>
        <h2 class="subtitle">{{ "headline"|trans }}</h2>
        {% if not settings.inscriptions_open %}<a href="#inscriptions-fermees" class="button">{{ "inscriptions.know.more"|trans }}</a>{% endif %}
    </div>
    <div class="secondary-color six wide column" style='background: url("{{ asset('images/back_home.png')}}"); background-size: cover; background-position: -220px 0px;'>
        <div class='ui segment basic title'>{{ "from.date"|trans }}</div>
        <div class="ui grid stackable centered">
            <div class="eight wide column aligned"><div>{{ settings.nb_students|number_format(0) }}</div><span>{{ "home.students.admitted"|trans }}</span></div>
            <div class="eight wide column aligned"><div>{{ settings.percent_diplomas|number_format(0) }}%</div><span>{{ "home.diplomas"|trans }}</span></div>
            <div class="eight wide column aligned"><div>2,5</div><span>{{ "home.promos"|trans }}</span></div>
            <div class="eight wide column aligned"><img src="{{ asset('images/lfs.png') }}" width="120px"><span>{{ "home.laureates"|trans }}</span></div>
        </div>
    </div>
    {% if settings.inscriptions_open %}
        <div class="info-banner">
            <div class="infoplus">
                <div class="open">{{"inscriptions.now.open"|trans }}</div>
                <div class="remaining">{{ "inscription.limit"|trans({'%date%': settings.inscription_limit_date|localizeddate('dd MMMM')}) }}</div>
                <a href="{{ settings['inscription_link_' ~ app.request.locale]}}" class="button inverted">{{ "i.want.to.register"|trans }}</a>
            </div>
        </div>
    {% else %}
        <div class="info-banner">
            <div class="content">{{ "inscription.next"|trans({'%date%': settings.inscription_next_date|localizeddate('dd MMMM')}) }}</div>
        </div>
    {% endif %}
</section>

<section class="text narrow">
    <div class="title">{{ "who.can.study"|trans }}</div>
    <div class="subtitle">{{ "who.can.study.sub"|trans }}</div>
</section>

<section class="checks">
    <div class='ui padded grid centered'>
        <div class="secondary-color three wide column"><div class="inside">{{ "home.levels"|trans }}</div></div>
        <div class="secondary-color light1 three wide column"><div class="inside">{{ "home.initialLevel"|trans }}<br><span>{{ "home.noBac"|trans }}</span></div></div>
        <div class="secondary-color light2 three wide column"><div class="inside">{{ "home.dispos"|trans }}</div></div>
        <div class="secondary-color light3 three wide column"><div class="inside">{{ "home.tariff"|trans }}</div></div>
    </div>
</section>

<section class="main-color dispositif">
    <h3>{{ "dispositif"|trans }}</h3>
    <h4>{{ "dispositif.sub"|trans }}</h4>
    <div class="ui grid centered">
        <div class="four wide column aligned">3Â½<span>{{ "home.months.training"|trans }}</span></div>
        <div class="four wide column aligned">160<span>{{ "home.hours"|trans }}</span></div>
        <div class="four wide column aligned">1<span>{{ "home.profPerClass"|trans }}</span></div>
        <div class="four wide column aligned">40<span>{{ "home.daysAtelier"|trans }}</span></div>
    </div>
    <div class="ui grid centered">
        <div class="four wide column aligned">40<span>{{ "home.benevoles"|trans }}</span></div>
        <div class="four wide column aligned">3<span>{{ "home.polesAssistance"|trans }}</span></div>
        <div class="four wide column aligned">1<span>{{ "home.polesOrientation"|trans }}</span></div>
        <div class="four wide column aligned">1<span>{{ "home.examen"|trans }}</span></div>
    </div>
    <div class="info-banner">
        <div class="info">{{ "engaged.every.day"|trans }} <span class="highlight">{{ "follow.our.actions"|trans }}</span> <a href="{{ social_facebook }}"><i class="ui icon facebook"></i><span>FB</span></a> <a href="{{ social_twitter }}"><i class="ui icon twitter"></i><span>TW</span></a> <a href="{{ social_youtube }}"><i class="ui icon youtube"></i><span>YT</span></a></div>
    </div>
</section>

{% if settings.inscriptions_open %}
<section class="text narrow">
    <div class="subtitle">{{ "inscriptions.now.open"|trans }}</div>
    <div class="title">{{ "inscription.limit.alt"|trans({'%date%': settings.inscription_limit_date|localizeddate('dd MMMM'), '%time%': "11:00:00 AM"|localizeddate('HH\:mm')}) }}</div>
    <div class="warning">
        <div class="title">{{ "warning"|trans }}</div>
        <p>{{ "warning.lang"|trans }}</p>
        <p>{{ "warning.lang.2"|trans }}</p>
    </div>
    <a href="{{ settings['inscription_link_' ~ app.request.locale]}}" class="button">{{ "i.want.to.register"|trans }}</a>
</section>
{% else %}
<section class="text narrow" id="inscriptions-fermees">
    <div class="subtitle">{{ "inscription.next"|trans({'%date%': settings.inscription_next_date|localizeddate('dd MMMM')}) }}</div>
    <div class="warning">
        <div class="title">{{ "warning"|trans }}</div>
        <p>{{ "warning.closed"|trans }}</p>
        <p>{{ "warning.closed.2"|trans }}</p>
        <p>{{ "warning.closed.3"|trans }}</p>
    </div>
</section>
{% endif %}

<section class="life">
    <div class="title">{{ "life"|trans }}</div>
    <div class="subtitle">{{ "life.sub"|trans }}</div>
    <div class="ui equal width center aligned padded grid stackable">
        <div class="row">
            <div class="image column bottom-right top-left" style="background-image: url('{{ asset('images/home1.png') }}');"></div>
            <div class="column bottom-left">{{ "life.equality"|trans }}</div>
            <div class="image column bottom-right" style="background-image: url('{{ asset('images/home2.png') }}');"></div>
            <div class="column bottom-left top-right">{{ "life.ambition"|trans }}</div>
        </div>
        <div class="row">
            <div class="column bottom-left">{{ "life.humanism"|trans }}</div>
            <div class="image column" style="background-image: url('{{ asset('images/home3.png') }}');"></div>
            <div class="column">{{ "life.access"|trans }}</div>
            <div class="image column bottom-right" style="background-image: url('{{ asset('images/home4.png') }}');"></div>
        </div>
    </div>
    <a href="{{ path('manifesto') }}" class="button manifesto">{{ "read.manifesto"|trans }}</a>
</section>

<section class="text">
    <div class="title">{{ "partners"|trans }}</div>
    <div class="subtitle">{{ "partners.sub"|trans }}</div>
</section>

<section class="ui grid four columns stackable centered partners">
    {% for partner in partners %}
        <div class="column">
            <div class="logo" style="background-image: url('{{ asset('uploads/partners/' ~ partner.image) }}')" alt="{{ partner.name }}"></div>
        </div>
    {% endfor %}
</section>

{% endblock %}